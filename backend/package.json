{
  "name": "survivor",
  "version": "1.0.0",
  "description": "An incubator platform for startups and investors",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:seed": "node tests/seed.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HSMM-Epitech/survivor.git"
  },
  "private": false,
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcrypt": "^6.0.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "eslint": "9.34.0",
    "jest": "30.1.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prisma": "^6.15.0",
    "supertest": "7.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "_moduleAliases": {
    "@entities": "src/entities",
    "@services": "src/services",
    "@repositories": "src/repositories",
    "@controllers": "src/controllers",
    "@routes": "src/routes",
    "@config": "src/config"
  }
}
