{
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests", "<rootDir>/backend"],
  "testMatch": [
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  "collectCoverageFrom": [
    "backend/**/*.js",
    "!backend/node_modules/**",
    "!backend/coverage/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "verbose": true,
  "setupFilesAfterEnv": [],
  "testTimeout": 10000
}
